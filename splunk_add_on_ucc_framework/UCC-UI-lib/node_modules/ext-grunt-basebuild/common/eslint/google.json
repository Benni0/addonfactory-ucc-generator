{
  "extends": "google",
  "env": {
    "browser": true,
    "node": true,
    "amd": true,
    "jasmine": true,
    "phantomjs": true
  },
  "rules": {
    // this option sets a specific tab width for your code
    "indent": [
      0,
      2
    ],
    "max-len": [
      2,
      100,
      4,
      {
        "ignoreComments": true,
        "ignoreUrls": true,
        "ignorePattern": "^\\s*var\\s.+=\\s*require\\s*\\("
      }
    ]
  }
}