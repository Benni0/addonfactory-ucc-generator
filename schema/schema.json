{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "definitions": {
        "AccountTabContent": {
            "type": "object",
            "properties": {
                "entity": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/Entity"
                    }
                },
                "title": {
                    "type": "string"
                },
                "options": {
                    "type": "object"
                },
                "name": {
                    "type": "string",
                    "enum": [
                        "account"
                    ]
                },
                "table": {
                    "$ref": "#/definitions/Table"
                }
            },
            "required": [
                "entity",
                "title",
                "name",
                "table"
            ],
            "additionalProperties": false
        },
        "ConfigurationPage": {
            "type": "object",
            "properties": {
                "description": {
                    "type": "string"
                },
                "title": {
                    "type": "string"
                },
                "tabs": {
                    "type": "array",
                    "items": {
                        "anyOf": [
                            {
                                "$ref": "#/definitions/AccountTabContent"
                            },
                            {
                                "$ref": "#/definitions/CustomizedTabContent"
                            },
                            {
                                "$ref": "#/definitions/LoggingTabContent"
                            },
                            {
                                "$ref": "#/definitions/ProxyTabContent"
                            }
                        ]
                    }
                }
            },
            "required": [
                "description",
                "title",
                "tabs"
            ],
            "additionalProperties": false
        },
        "CustomizedTabContent": {
            "type": "object",
            "properties": {
                "entity": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/Entity"
                    }
                },
                "title": {
                    "type": "string"
                },
                "options": {
                    "type": "object"
                },
                "name": {
                    "type": "string",
                    "pattern": "^\\w+$"
                },
                "table": {
                    "$ref": "#/definitions/Table"
                }
            },
            "required": [
                "entity",
                "title",
                "name"
            ],
            "additionalProperties": false
        },
        "Entity": {
            "type": "object",
            "properties": {
                "field": {
                    "type": "string",
                    "pattern": "^\\w+$"
                },
                "label": {
                    "type": "string"
                },
                "type": {
                    "type": "string",
                    "pattern": "^\\w+$"
                },
                "help": {
                    "type": "string"
                },
                "defaultValue": {
                    "oneOf": [
                        {
                            "type": "number"
                        },
                        {
                            "type": "string"
                        }
                    ]
                },
                "options": {
                    "type": "object"
                },
                "required": {
                    "type": "boolean"
                },
                "encrypted": {
                    "type": "boolean"
                },
                "validators": {
                    "type": "array",
                    "items": {
                        "anyOf": [
                            {
                                "$ref": "#/definitions/StringValidator"
                            },
                            {
                                "$ref": "#/definitions/NumberValidator"
                            },
                            {
                                "$ref": "#/definitions/RegexpValidator"
                            }
                        ]
                    }
                }
            },
            "required": [
                "field",
                "label",
                "type"
            ],
            "additionalProperties": false
        },
        "InputsPage": {
            "type": "object",
            "properties": {
                "description": {
                    "type": "string"
                },
                "table": {
                    "$ref": "#/definitions/Table"
                },
                "services": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "title": {
                                "type": "string"
                            },
                            "entity": {
                                "type": "array",
                                "items": {
                                    "$ref": "#/definitions/Entity"
                                }
                            },
                            "name": {
                                "type": "string",
                                "pattern": "^\\w+$"
                            }
                        },
                        "required": [
                            "title",
                            "entity",
                            "name"
                        ]
                    }
                },
                "title": {
                    "type": "string"
                }
            },
            "required": [
                "table",
                "services",
                "title"
            ],
            "additionalProperties": false
        },
        "LoggingTabContent": {
            "type": "object",
            "properties": {
                "entity": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/Entity"
                    }
                },
                "title": {
                    "type": "string"
                },
                "options": {
                    "type": "object"
                },
                "name": {
                    "type": "string",
                    "enum": [
                        "logging"
                    ]
                }
            },
            "required": [
                "entity",
                "title",
                "name"
            ],
            "additionalProperties": false
        },
        "Meta": {
            "type": "object",
            "properties": {
                "displayName": {
                    "type": "string"
                },
                "name": {
                    "type": "string",
                    "pattern": "^\\w+$"
                },
                "restRoot": {
                    "type": "string",
                    "pattern": "^\\w+$"
                },
                "uccVersion": {
                    "type": "string",
                    "pattern": "^(\\d{1,3}\\.){2}\\d{1,3}$"
                },
                "version": {
                    "type": "string",
                    "pattern": "^(\\d{1,3}\\.){2}\\d{1,3}$"
                }
            },
            "required": [
                "displayName",
                "name",
                "restRoot",
                "uccVersion",
                "version"
            ],
            "additionalProperties": false
        },
        "NumberValidator": {
            "type": "object",
            "properties": {
                "type": {
                    "type": "string",
                    "enum": [
                        "number"
                    ]
                },
                "range": {
                    "type": "array",
                    "items": {
                        "type": "number"
                    }
                }
            },
            "required": [
                "type",
                "range"
            ],
            "additionalProperties": false
        },
        "Pages": {
            "type": "object",
            "properties": {
                "configuration": {
                    "$ref": "#/definitions/ConfigurationPage"
                },
                "inputs": {
                    "$ref": "#/definitions/InputsPage"
                }
            },
            "additionalProperties": false
        },
        "ProxyTabContent": {
            "type": "object",
            "properties": {
                "entity": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/Entity"
                    }
                },
                "title": {
                    "type": "string"
                },
                "options": {
                    "type": "object"
                },
                "name": {
                    "type": "string",
                    "enum": [
                        "proxy"
                    ]
                }
            },
            "required": [
                "entity",
                "title",
                "name"
            ],
            "additionalProperties": false
        },
        "RegexpValidator": {
            "type": "object",
            "properties": {
                "type": {
                    "type": "string",
                    "enum": [
                        "regex"
                    ]
                },
                "pattern": {
                    "type": "string"
                }
            },
            "required": [
                "type",
                "pattern"
            ],
            "additionalProperties": false
        },
        "StringValidator": {
            "type": "object",
            "properties": {
                "type": {
                    "type": "string",
                    "enum": [
                        "string"
                    ]
                },
                "minLength": {
                    "type": "number",
                    "minimum": 0
                },
                "maxLength": {
                    "type": "number",
                    "minimum": 0
                }
            },
            "required": [
                "type",
                "minLength",
                "maxLength"
            ],
            "additionalProperties": false
        },
        "Table": {
            "type": "object",
            "properties": {
                "actions": {
                    "type": "array",
                    "items": {
                        "type": "string",
                        "enum": [
                            "edit",
                            "delete",
                            "clone",
                            "enable"
                        ]
                    }
                },
                "moreInfo": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "label": {
                                "type": "string"
                            },
                            "field": {
                                "type": "string",
                                "pattern": "^\\w+$"
                            }
                        },
                        "required": [
                            "label",
                            "field"
                        ]
                    }
                },
                "header": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "label": {
                                "type": "string"
                            },
                            "field": {
                                "type": "string",
                                "pattern": "^\\w+$"
                            }
                        },
                        "required": [
                            "label",
                            "field"
                        ]
                    }
                }
            },
            "required": [
                "actions",
                "header"
            ],
            "additionalProperties": false
        }
    },
    "type": "object",
    "properties": {
        "meta": {
            "$ref": "#/definitions/Meta"
        },
        "pages": {
            "$ref": "#/definitions/Pages"
        }
    },
    "required": [
        "meta",
        "pages"
    ],
    "additionalProperties": false
}